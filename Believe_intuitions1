    <script>
        // JavaScript Code
        let cartItems = [];
        let userInformation = {};

        // Function to hide the Proceed to Checkout button
        function hideCheckoutButton() {
            const checkoutButton = document.getElementById("checkout-button");
            checkoutButton.style.display = "none";
        }

        // Function to show the Proceed to Checkout button
        function showCheckoutButton() {
            const checkoutButton = document.getElementById("checkout-button");
            checkoutButton.style.display = "block";
        }

        // Function to hide the Order Information form
        function hideOrderForm() {
            const orderForm = document.getElementById("order-form");
            orderForm.style.display = "none";
        }

        // Function to show the Order Information form
        function showOrderForm() {
            showCheckoutButton(); // Show the Proceed to Checkout button
            hideOrderSummary(); // Hide the Order Summary
            const orderForm = document.getElementById("order-form");
            orderForm.style.display = "block";
        }

        // Function to hide the Order Summary
        function hideOrderSummary() {
            const orderSummary = document.getElementById("order-summary");
            orderSummary.style.display = "none";
        }

        // Function to show the Order Summary
        function showOrderSummary() {
            const orderSummary = document.getElementById("order-summary");
            orderSummary.style.display = "block";
        }

        function addToCart(productName, price) {
            const item = { productName, price };
            cartItems.push(item);
            updateCartDisplay();
        }

        function updateCartDisplay() {
            const cartContainer = document.getElementById("cart");
            cartContainer.innerHTML = "";
            if (cartItems.length === 0) {
                cartContainer.innerHTML = "<p>Cart is empty</p>";
            } else {
                cartItems.forEach(item => {
                    const cartItem = document.createElement("div");
                    cartItem.innerHTML = `<p>${item.productName} - $${item.price}</p>`;
                    cartContainer.appendChild(cartItem);
                });
            }
        }

        function confirmOrder() {
            const fullName = document.getElementById("full-name").value;
            const location = document.getElementById("location").value;
            const pinCode = document.getElementById("pin-code").value;

            if (!fullName || !location || !pinCode) {
                alert("Please fill in all required fields.");
                return;
            }

            hideOrderForm(); // Hide the Order Information form
            showCheckoutButton(); // Show the Proceed to Checkout button
            showOrderSummary(); // Show the Order Summary

            userInformation = {
                fullName,
                location,
                pinCode
            };

            // Display the order summary at the end of the page
            displayOrderSummary();

            // Simulate sending an email (client-side, not recommended for production)
            const emailService = emailjs;
            emailService.init("user_your_user_id"); // Replace with your Email.js user ID
            emailService.send("default_service", "template_name", {
                to_email: "prashanthinge@17.com", // Replace with the recipient's email address
                full_name: fullName,
                location_details: location,
                pin_code: pinCode,
                cart: JSON.stringify(cartItems),
            }).then(function(response) {
                if (response.status === 200) {
                    alert("Order confirmed! Your order details have been sent via email.");
                    cartItems = [];
                    updateCartDisplay();
                } else {
                    alert("There was an error sending the email. Please try again later.");
                }
            });
        }

        function displayOrderSummary() {
            const orderSummaryContainer = document.getElementById("order-summary");
            orderSummaryContainer.innerHTML = `
                <h2>Order Summary</h2>
                <p>Full Name: ${userInformation.fullName}</p>
                <p>Location: ${userInformation.location}</p>
                <p>Pin Code: ${userInformation.pinCode}</p>
                <h3>Order Items:</h3>
            `;

            if (cartItems.length === 0) {
                orderSummaryContainer.innerHTML += "<p>No items in the cart.</p>";
            } else {
                cartItems.forEach(item => {
                    orderSummaryContainer.innerHTML += `<p>${item.productName} - $${item.price}</p>`;
                });
            }
        }
    </script>


    <!-- Bootstrap JavaScript and jQuery -->
    <script src="./Believe_intuitions1_files/jquery-3.5.1.slim.min.js.download"></script>
    <script src="./Believe_intuitions1_files/bootstrap.bundle.min.js.download"></script>


